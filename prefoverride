# --- Window Management & Focus (see: https://ice-wm.org/manual/icewm-10.html#FOCUS-AND-BEHAVIOR) ---
# SizeMaximized = 1  # Allow resizing of maximized windows
SizeMaximized=1 # 0/1
# FocusFollowMouse = false  # Focus windows when the mouse hovers over them
FocusFollowMouse = true
SmartPlacement=1 # Auto-arrange new windows

# Focus Policy Settings
FocusOnMap=1              # Focus new windows when they appear (0=no, 1=yes)
FocusOnMapTransient=1      # Focus transient windows (dialogs) when they appear (0=no, 1=yes)
FocusOnMapWorkspace=1      # Focus windows when switching to their workspace (0=no, 1=yes)
FocusOnMapRoot=0           # Focus root window when clicking on desktop (0=no, 1=yes)

# Window Placement Settings
SmartPlacement=1           # Auto-arrange new windows (0=no, 1=yes)
SmartPlacementIsMinimized=0 # Don't auto-arrange minimized windows (0=no, 1=yes)
SmartPlacementIsTransient=0 # Don't auto-arrange transient windows (0=no, 1=yes)
SmartPlacementIsScreen=1   # Auto-arrange across all screens (0=no, 1=yes)
SmartPlacementIsWorkspace=1 # Auto-arrange within current workspace (0=no, 1=yes)

# Window Behavior Settings
HonorProgramSizeHint=1     # Respect program's size hints (0=no, 1=yes)
HonorProgramPositionHint=1 # Respect program's position hints (0=no, 1=yes)
ShadeWindowWithMouse=1     # Allow shading windows with mouse (0=no, 1=yes)
ShadeWindowWithMouseButton=1 # Mouse button for shading (1=left, 2=middle, 3=right)
ShadeWindowWithMouseDoubleClick=1 # Double-click titlebar to shade (0=no, 1=yes)

# Window State Settings
ShowWindowStatus=1         # Show window status in titlebar (0=no, 1=yes)
ShowWindowStatusTime=1     # Show time in window status (0=no, 1=yes)
ShowWindowStatusFile=1     # Show file info in window status (0=no, 1=yes)
ShowWindowStatusSize=1     # Show size info in window status (0=no, 1=yes)

# Window Management Settings
MoveWindowWithMouse=1      # Allow moving windows with mouse (0=no, 1=yes)
MoveWindowWithMouseButton=1 # Mouse button for moving (1=left, 2=middle, 3=right)
ResizeWindowWithMouse=1    # Allow resizing windows with mouse (0=no, 1=yes)
ResizeWindowWithMouseButton=3 # Mouse button for resizing (1=left, 2=middle, 3=right)

# Window Stacking Settings
StackWindowWithMouse=1     # Allow stacking windows with mouse (0=no, 1=yes)
StackWindowWithMouseButton=2 # Mouse button for stacking (1=left, 2=middle, 3=right)
StackWindowWithMouseDoubleClick=0 # Double-click to stack (0=no, 1=yes)

# Window Focus Settings
FocusNewWindow=1           # Focus new windows (0=no, 1=yes)
FocusNewWindowAsTransient=1 # Focus new transient windows (0=no, 1=yes)
FocusNewWindowAsDesktop=0  # Focus new desktop windows (0=no, 1=yes)
FocusNewWindowAsDock=0     # Focus new dock windows (0=no, 1=yes)
FocusNewWindowAsToolbar=0  # Focus new toolbar windows (0=no, 1=yes)
FocusNewWindowAsMenu=0     # Focus new menu windows (0=no, 1=yes)
FocusNewWindowAsDialog=1   # Focus new dialog windows (0=no, 1=yes)
FocusNewWindowAsUtility=1  # Focus new utility windows (0=no, 1=yes)
FocusNewWindowAsSplash=0   # Focus new splash windows (0=no, 1=yes)
FocusNewWindowAsNotification=0 # Focus new notification windows (0=no, 1=yes)
FocusNewWindowAsCombo=0    # Focus new combo windows (0=no, 1=yes)
FocusNewWindowAsDnd=0      # Focus new drag-and-drop windows (0=no, 1=yes)
FocusNewWindowAsNormal=1   # Focus new normal windows (0=no, 1=yes)

