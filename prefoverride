# TaskBarIconSize = 12  # Size of icons in the taskbar
TaskBarIconSize=12  # Adjust this value for smaller icons
# TaskBarShowWindowLabels = 1  # Show window titles in the taskbar (0 = icons only)
TaskBarShowWindowLabels=1
# TaskbarButtonWidthDivisor = 8  # Higher = narrower taskbar buttons
TaskbarButtonWidthDivisor=8
# TaskBarShowWindowIcons = 1  # Show icons on taskbar buttons
# TaskBarShowShowDesktopButton = 1  # Show the "Show Desktop" button
# TaskBarShowClock = 1  # Show the clock on the taskbar
# TaskBarShowAPMStatus = 0  # Show battery status
# TaskBarShowCPUStatus = 1  # Show CPU status
# TaskBarShowNetStatus = 1  # Show network status
# ColorNormalTaskBarAppText = "#bbbbbb"  # Text color for unfocused taskbar buttons
# ColorActiveTaskBarAppText = "#ffffcc"  # Text color for the active (focused) taskbar button
# ColorDefaultTaskBar = "#222222"  # Background color of the taskbar
# ColorMinimizedTaskBarAppText = "#a85d5d"  # Text color for minimized taskbar buttons
ColorMinimizedTaskBarAppText="#a85d5d"

# --- Window Management & Focus (see: https://ice-wm.org/manual/icewm-10.html#FOCUS-AND-BEHAVIOR) ---
# SizeMaximized = 1  # Allow resizing of maximized windows
SizeMaximized=1 # 0/1
# FocusFollowMouse = false  # Focus windows when the mouse hovers over them
FocusFollowMouse = false

