#!/bin/sh
# IceWM startup file
# Run at the start of an IceWM session.

# Helper: launch a daemon and restart if it exits (for picom & dunst)
auto_restart() {
    while true; do
        "$@"
        sleep 2
    done
}

# Start PolicyKit authentication agent for pcmanfm and other apps
if command -v lxpolkit >/dev/null 2>&1; then
    lxpolkit &
fi

# Start/restart picom compositor
if command -v picom >/dev/null 2>&1; then
    auto_restart picom --config "$HOME/.config/picom.conf" &
else
    echo "Warning: picom not found" >&2
fi

# Set a random wallpaper (change path as needed)
if [ -d "$HOME/.icewm/themes/IceWM-RedZen/backgrounds" ]; then
    feh --randomize --bg-scale "$HOME/.icewm/themes/IceWM-RedZen/backgrounds/"*
else
    echo "Warning: Background directory not found" >&2
fi

# Start/restart dunst notification daemon
if command -v dunst >/dev/null 2>&1; then
    auto_restart dunst &
else
    echo "Warning: dunst not found" >&2
fi

# System tray applets
if command -v nm-applet >/dev/null 2>&1; then
    nm-applet &
fi

if command -v blueman-applet >/dev/null 2>&1; then
    blueman-applet &
fi

# LXQt Power Manager (replace xfce4-power-manager)
if command -v lxqt-powermanagement >/dev/null 2>&1; then
    lxqt-powermanagement &
fi

# Clipboard manager
if command -v clipit >/dev/null 2>&1; then
    clipit &
fi

# Auto-start night light (optional)
# if command -v redshift >/dev/null 2>&1; then
#     redshift -O 3500 &
# fi

# System monitoring
if command -v conky >/dev/null 2>&1; then
    conky &
fi

# Auto-mount USB drives (monitor only)
if command -v udisksctl >/dev/null 2>&1; then
    udisksctl monitor &
fi

# Screenshot daemon
if command -v flameshot >/dev/null 2>&1; then
    flameshot &
fi

exit 0