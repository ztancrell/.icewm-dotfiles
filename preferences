# Terminal
program.xterm="xterm"  # Fallback terminal
program.alacritty="alacritty"  # Primary terminal

# File Manager
program.filemanager="pcmanfm"  # PCManFM File Manager

# Web Browser
program.browser="firefox-nightly"  # Firefox Web Browser

# Text Editors
program.mousepad="mousepad"  # Mousepad Text Editor
program.vscodium="vscodium"  # VSCodium IDE
program.cursor="appimagekit_402369d7312601ba1facc6e361ccbfc9_co.anysphere.cursor"  # Cursor AppImage

# Archive Manager
program.xarchiver="xarchiver"  # Xarchiver

# Media Player
program.spotify="spotify"  # Spotify
program.mpv="mpv"  # MPV Media Player

# Video Editing
program.shotcut="shotcut"  # Shotcut Video Editor
program.obs="obs"  # OBS Studio

# Utilities
program.catfish="catfish"  # Catfish File Search
program.gnome_disks="gnome-disks"  # Disks Utility
program.screenshot="xfce4-screenshooter"  # Screenshot Tool
program.pavucontrol="pavucontrol"  # PulseAudio Volume Control
program.application_finder="xfce4-appfinder"  # Application Finder

# Games
program.steam="flatpak run --branch=stable --arch=x86_64 --command=/app/bin/steam --file-forwarding com.valvesoftware.Steam"  # Steam
program.heroic="heroic"  # Heroic Games Launcher
program.lutris="lutris"  # Lutris

# Internet
program.thunderbird="thunderbird"  # Thunderbird Email Client
program.qbittorrent="qbittorrent"  # qBittorrent
program.discord="flatpak run com.discordapp.Discord"  # Discord

# Graphics
program.pinta="pinta"  # Pinta Image Editor
